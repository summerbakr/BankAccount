@{
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="text-center">

    @model User
    <title>Register!</title>
    <h1>Register User!</h1>
    <form action="/processuser" method="post">
    <p>First Name: <input type="text" asp-for="FirstName"/>
    <span style="color:red;" asp-validation-for="FirstName"></span></p>
    <p>Last Name: <input type="text" asp-for="LastName"/>
    <span style="color:red;" asp-validation-for="LastName"></span></p>
    <p>Email: <input type="text" asp-for="Email"/>
    <span style="color:red;" asp-validation-for="Email"></span></p>
    <p>Password: <input type="text" asp-for="Password"/>
    <span style="color:red;" asp-validation-for="Password"></span></p>
    <p>Password Confirmation: <input type="text" asp-for="Confirm"/>
    <span style="color:red;" asp-validation-for="Confirm"></span></p>
    <input type="Submit" Value="Sign up Now!" />
    </form>
    <p>Already registered? <a href="/login">Login!</a></p>
</body>
</html>

